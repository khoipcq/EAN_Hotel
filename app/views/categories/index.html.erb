<h1>Listing categories</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Code</th>
    <th>Description</th>
    <th>Type</th>
  </tr>

<% @categories.each do |category| %>
  <tr>
    <td><%=h category.name %></td>
    <td><%=h category.code %></td>
    <td><%=h category.description %></td>
    <td><%=h category.type %></td>
    <td><%= link_to t('.show'), category %></td>
    <td><%= link_to t('.edit'), edit_category_path(category) %></td>
    <td><%= link_to t('.destroy'), category, :confirm => t(".confirm_destroy"), :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

