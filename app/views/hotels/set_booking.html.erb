      <td colspan=4><h4><%=t(".hotel_info")%><br/>-----------------------------------------------</h4>
      </td>
    </tr>
    <tr>
      <td width="20%"><b><%=t(".hotel")%></b></td>
      <td colspan=3><%= @book_info["hotelName"] %></td>
    </tr>
    <tr>
      <td width="20%"><b><%=t(".address")%></b></td>
      <td colspan=3><%=h @book_info["hotelAddress"]%>, <%=h @book_info["hotelCity"]%>, <%=h @book_info["hotelStateProvinceCode"]%>, <%=h get_country_name(@book_info["hotelCountryCode"]) %></td>
