    <tr>
      <td width="20%"><b><%=t(".phone")%></b></td>
      <td colspan=3><%=t(".na")%></td>
    </tr>
    <tr>
      <td width="20%"><b><%=t(".faxs")%></b></td>
      <td colspan=3><%=t(".na")%></td>
    </tr>
    <tr>
      <td width="20%"><b><%=t(".email")%></b></td>
      <td colspan=3><%=t(".na")%></td>
    </tr>
    <tr>
      <td colspan=4><h4><%=t(".reservation_details")%><br/>-----------------------------------------------</h4>
      </td>
    </tr>
    <tr>
      <td width="20%"><b><%=t(".check_in")%></b></td>
      <td width="30%"><%=params["arrival_date"]%> 
        <%=t(".check_in_time", time: params["check_in_time"])%> </td>
      <td colspan=2><b>Rates</b></td>
    </tr>
    <tr>
      <td width="20%"><b><%=t(".check_out")%></b></td>
      <td width="30%"><%=params["departure_date"]%> <%=t(".check_out_time", time: params["check_out_time"])%></td>
      <td width="20%"><b><%=params["rate_room_description"]%></b></td>
      <td width="30%"><%=params["rate_room_price"]%></td>
    </tr>
    <tr>
      <td width="20%"><b><%=t(".for")%></b></td>
      <td width="30%"><%=params["room_info"]%></td>
