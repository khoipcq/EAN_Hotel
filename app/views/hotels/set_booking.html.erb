    <tr>
      <td colspan=2></td>
      <td width="20%"><b><%=t(".total")%></b></td>
      <td width="30%"><%=params["total"]%></td>
      
    </tr>
    
      <tr>
        <td colspan=4><h4><%=t(".room_details")%><br/>-----------------------------------------------</h4>
        </td>
      </tr>
      <tr>
        <td colspan=4><b><%=t(".room_detail")%>:</b> <%=raw params["room_detail"]%></td>
      </tr>
