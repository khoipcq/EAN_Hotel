      <tr>
        <td colspan=4><h5><%=t(".room", id: room_id)%></h5>
        </td>
      </tr>
      <tr>
        <td width="20%"><b><%=t(".guest_name")%></b></td>
        <td colspan=3><%=params["r#{room_id}_first_name"] + " " + params["r#{room_id}_last_name"] %></td>
      </tr>
      
    <%end%>
