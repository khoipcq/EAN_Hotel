      <td colspan=4><h4><%=t(".payment_info")%><br/>-----------------------------------------------</h4>
      </td>
    </tr>
    <tr>
      <td width="20%"><b><%=t(".credit_card_type")%></b></td>
      <td colspan=3><%=get_credit_card(params["credit_card_type"])%></td>
