    <tr>
      <td colspan=4><b><%=t(".thank_you")%><b></td>
    </tr>
    <tr>
      <td colspan=4>
        <%=t(".email_sent", email: params["email"])%></td>
    </tr>
    <tr>
      <td width="20%"><b><%=t(".itinerary_number")%></b></td>
      <td colspan=3><%= @book_info["itineraryId"] %></td>
    </tr>
